{
  "name": "LogicNomad",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:web\" \"yarn dev:api\"",
    "dev:web": "yarn workspace web dev",
    "dev:api": "yarn workspace api start:dev",
    "build": "yarn clean:tsbuild && yarn build:packages && yarn build:apps",
    "build:packages": "yarn build:engine && yarn build:ui && yarn build:flowgraph",
    "build:apps": "yarn build:api && yarn build:web",
    "build:parallel": "yarn build:engine & yarn build:ui & yarn build:flowgraph & wait && yarn build:api & yarn build:web & wait",
    "build:analyze": "yarn workspace web build --mode analyze",
    "type-check": "yarn workspace web tsc --noEmit && yarn workspace api tsc --noEmit",
    "type-check:web": "yarn workspace web tsc --noEmit",
    "type-check:api": "yarn workspace api tsc --noEmit",
    "build:engine": "yarn workspace @logicnomad/engine build",
    "build:ui": "yarn workspace @logicnomad/ui build",
    "build:flowgraph": "yarn workspace @logicnomad/flowgraph build",
    "build:web": "yarn workspace web build",
    "build:api": "yarn workspace api build",
    "lint": "yarn lint:web && yarn lint:api && yarn lint:engine && yarn lint:ui",
    "lint:web": "yarn workspace web lint",
    "lint:api": "yarn workspace api lint",
    "lint:engine": "yarn workspace @logicnomad/engine lint",
    "lint:ui": "yarn workspace @logicnomad/ui lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "yarn clean:build && yarn clean:cache",
    "clean:build": "rm -rf apps/*/dist packages/*/dist apps/*/build packages/*/build",
    "clean:cache": "rm -rf apps/*/node_modules/.cache packages/*/node_modules/.cache apps/*/.vite packages/*/.vite",
    "clean:tsbuild": "find . -name '*.tsbuildinfo' -type f -delete && find . -name 'tsconfig.tsbuildinfo' -type f -delete",
    "clean:all": "yarn clean:build && yarn clean:cache && yarn clean:tsbuild && rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:web": "rm -rf apps/web/dist apps/web/node_modules/.cache apps/web/.vite",
    "clean:api": "rm -rf apps/api/dist apps/api/tsconfig.tsbuildinfo",
    "clean:engine": "rm -rf packages/engine/dist",
    "clean:ui": "rm -rf packages/ui/dist"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.3.3",
    "typescript": "~5.9.3"
  },
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/kyuna0312/LogicNomad",
  "author": "kyuna0312",
  "license": "MIT"
}
